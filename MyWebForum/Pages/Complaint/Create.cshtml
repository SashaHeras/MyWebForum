@page
@model MyWebForum.Pages.Complaint.CreateModel

@{
    if(ViewBag.IsAdmin == true)
    {
        Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Pages/Shared/_Layout.cshtml";
    }
}

<form method="post" asp-page-handler="create">
    <div class="form-group">
        <label asp-for="Complaint.Description" class="control-label">Description:</label><br />
        <input asp-for="@Model.Complaint.Description" class="form-control"></input>
        <span asp-validation-for="Complaint.Description" class="text-danger"></span>        
    </div>
    <div class="form-group">
        <input asp-for="PostId" type="hidden"/>
    </div>
    </br>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</form>