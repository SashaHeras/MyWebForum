        </div>

        <div id="header" style="text-align: center">
            <table width="100%">
                <tr><td width="91%" style="padding-top: 10px"><a id="styleTitle" asp-page="/Topic/Index">MyForum</a></td><td width="9%" style="padding-top: 10px"><a type="button" asp-page="/User/Index" class="btn btn-link profileLink">My Profile</a></td></tr>
            </table>
        </div>

        <div id="main">
            @RenderBody()
        </div>
    </div>
</body>
</html>